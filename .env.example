# LLM Provider API Keys
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# OpenAI-Compatible Endpoints (optional)
# OPENAI_COMPATIBLE_BASE_URL=
# OPENAI_COMPATIBLE_API_KEY=

# Ollama (optional, defaults to http://localhost:11434)
# OLLAMA_BASE_URL=http://localhost:11434

# Docker user (run `id -u` and `id -g` on the host to get these)
# SMOOTHBOT_UID=1000
# SMOOTHBOT_GID=1000

# Docker data directory (host path mounted into the container)
# SMOOTHBOT_DATA_DIR=./data

# Server
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=file:./data/smoothbot.db

# Workspace root (inside container: /smoothbot, dev: ./data)
WORKSPACE_ROOT=./data
