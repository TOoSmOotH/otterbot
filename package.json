{
  "name": "otterbot",
  "version": "0.10.0",
  "private": true,
  "description": "Open-source multi-agent AI orchestration system",
  "license": "MIT",
  "author": "Mike Reeves",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @otterbot/shared build && { pnpm --filter @otterbot/shared dev & pnpm --filter @otterbot/server dev & pnpm --filter @otterbot/web dev; }",
    "dev:server": "pnpm --filter @otterbot/server dev",
    "dev:web": "pnpm --filter @otterbot/web dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "pnpm --filter @otterbot/web test:e2e",
    "lint": "pnpm -r lint",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:up:search": "docker compose --profile search up -d",
    "db:push": "pnpm --filter @otterbot/server db:push",
    "db:seed": "pnpm --filter @otterbot/server db:seed",
    "test:e2e:docker": "docker compose -f docker-compose.e2e.yml up -d --build --wait && npx playwright test -c e2e/playwright.config.ts; docker compose -f docker-compose.e2e.yml down",
    "test:e2e:docker:up": "docker compose -f docker-compose.e2e.yml up -d --build --wait",
    "test:e2e:docker:down": "docker compose -f docker-compose.e2e.yml down",
    "test:e2e:docker:run": "npx playwright test -c e2e/playwright.config.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "better-sqlite3-multiple-ciphers",
      "esbuild",
      "isolated-vm",
      "node-pty",
      "onnxruntime-node",
      "puppeteer"
    ]
  },
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
